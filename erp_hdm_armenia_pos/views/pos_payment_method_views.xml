<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_view_form_inherit_hdm" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit.hdm</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_method_type']" position="after">
                <field name="use_payment_terminal"/>
                <field name="use_ext_pos" invisible="use_payment_terminal != 'hdm'"/>
            </xpath>
        </field>
    </record>
</odoo>
