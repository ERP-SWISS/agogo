<odoo>


    <record id="view_hdm_log_tree" model="ir.ui.view">
        <field name="name">hdm.log.tree</field>
        <field name="model">hdm.log</field>
        <field name="arch" type="xml">
            <list string="HDM Logs" default_order="id desc">
                <field name="name"/>
                <field name="code"/>
                <field name="terminal_id"/>
                <field name="model_name"/>
                <field name="res_id"/>
                <field name="ref"/>
            </list>
        </field>
    </record>

    <record id="view_hdm_log_form" model="ir.ui.view">
        <field name="name">hdm.log.form</field>
        <field name="model">hdm.log</field>
        <field name="arch" type="xml">
            <form string="HDM Log">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="terminal_id"/>
                        </group>
                        <group>
                            <field name="model_name"/>
                            <field name="res_id"/>
                            <field name="ref"/>
                        </group>
                    </group>

                    <group>
                        <field name="req_data" widget="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hdm_log" model="ir.actions.act_window">
        <field name="name">HDM Logs</field>
        <field name="res_model">hdm.log</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No HDM logs yet.
            </p>
        </field>
    </record>
    <menuitem
            id="menu_hdm_log"
            name="HDM Logs"
            action="action_hdm_log"
            sequence="90" groups="base.group_system"/>
</odoo>