<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_hdm_connection_tree" model="ir.ui.view">
            <field name="name">hdm.connection.tree</field>
            <field name="model">hdm.connection</field>
            <field name="arch" type="xml">
                <list string="HDM Connections">
                    <field name="name"/>
                    <field name="host"/>
                    <field name="port"/>
                    <field name="cashier"/>
                    <field name="hdm_payment"/>
                    <field name="hdm_seq"/>
                    <field name="use_ext_pos"/>
                </list>
            </field>
        </record>

        <record id="view_hdm_connection_form" model="ir.ui.view">
            <field name="name">hdm.connection.form</field>
            <field name="model">hdm.connection</field>
            <field name="arch" type="xml">
                <form string="HDM Connection">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="host"/>
                                <field name="port"/>
                                <field name="cashier"/>
                                <field name="hdm_payment"/>
                            </group>
                            <group>
                                <field name="hdm_password" password="True"/>
                                <field name="hdm_pin"/>
                                <field name="hdm_key" readonly="1"/>
                                <field name="hdm_seq"/>
                            </group>
                             <button name="sync_hdm_time" type="object"
                                        string="ՀԴՄ սարքի համաժամանակեցում" class="oe_link"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hdm_connection" model="ir.actions.act_window">
            <field name="name">HDM Connections</field>
            <field name="res_model">hdm.connection</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p>Manage HDM connection settings here.</p>
            </field>
        </record>

        <menuitem
            id="menu_hdm_connection_root"
            name="HDM Connections"
            parent="base.menu_users"
            action="erp_hdm_armenia.action_hdm_connection"
            sequence="50"/>

        <record id="company_form_inherit" model="ir.ui.view">
            <field name="name">company.form.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_info']" position="after">
                    <page string="HDM" name="HDM" groups="base.group_system">
                        <group>
                            <field name="default_hdm_connection_id"/>
                            <field name="host" placeholder='198.168.1.1'/>
                            <field name="port" placeholder='8000'/>
                            <field name="cashier" placeholder='Cashier'/>
                            <field name="hdm_password" placeholder='Password'/>
                            <field name="hdm_pin" placeholder='Pin'/>
                            <field name="hdm_key" readonly='1'/>
                            <div class="row">
                                <button name="hdm_connection" type="object"
                                        string="ՀԴՄ սեսիայի հաստատում" class="oe_link"/>
                                <button name="hdm_disconnection" type="object"
                                        string="Disconnection" class="oe_link"/>
                                <button name="sync_hdm_time" type="object"
                                        string="ՀԴՄ սարքի համաժամանակեցում" class="oe_link"/>
                            </div>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>